			{
			type=EEikCtNumberEditor;
            prompt="Echo Port";
            id=EUdpEchoPort;
			control=NUMBER_EDITOR
				{
					min= 1;
					max= 65535;
				};
			},
		DLG_LINE
			{
			type=EEikCtCheckBox;
			prompt="Per packet log";
			id=EUdpEchoPacketTrace;
			},
		DLG_LINE
			{
			type=EEikCtEdwin;
            prompt="Multicast Group";
            id=EUdpEchoMcastGroup;
			control=EDWIN
				{
					width= 16;
					maxlength= 48;
				};
			}
		};
	}


